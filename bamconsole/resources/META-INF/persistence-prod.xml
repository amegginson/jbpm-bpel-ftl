<?xml version="1.0" encoding="UTF-8"?>
<!-- Persistence deployment descriptor for prod profile -->
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd"
	version="1.0">

	<persistence-unit name="bamconsole">
		<provider>org.hibernate.ejb.HibernatePersistence</provider>
		<jta-data-source>java:/bamconsoleDatasource</jta-data-source>
		<properties>
      <!-- Replace with the production dialect eg. org.hibernate.dialect.MySQLInnoDBDialect -->
			<property name="hibernate.dialect" value="org.hibernate.dialect.HSQLDialect" />
			<property name="hibernate.hbm2ddl.auto" value="validate" />
			<property name="hibernate.jdbc.batch_size" value="20" />
			<property name="jboss.entity.manager.factory.jndi.name" value="java:/bamconsoleEntityManagerFactory" />
		</properties>
	</persistence-unit>

</persistence>
