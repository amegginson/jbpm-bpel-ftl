<?xml version="1.0" encoding="iso-8859-1" standalone="yes" ?>

<installation version="1.0">
  <!-- Ant properties in this file can be referenced with @{},
    otherwise use variables below in installer files with ${} -->
  <info>
    <appname>@{product.name}</appname>
    <appversion>@{product.version}</appversion>
    <uninstaller name="remove.task" write="yes" />
  </info>

  <guiprefs width="600" height="480" resizable="no">
    <laf name="kunststoff">
      <os family="unix" />
    </laf>
    <modifier key="useHeadingPanel" value="yes" />
    <modifier key="useHeadingForSummary" value="yes" />
    <modifier key="headingImageOnLeft" value="yes" />
    <modifier key="headingLineCount" value="2" />
    <modifier key="headingFontSize" value="1.5" />
    <modifier key="headingBackgroundColor" value="0x00ffffff" />
    <modifier key="headingPanelCounter" value="text" />
    <modifier key="headingPanelCounterPos" value="inHeading" />
  </guiprefs>

  <locale>
    <langpack iso3="eng" />
  </locale>

  <!-- Need to define ant properties we want to use during install as variables -->
  <variables>
    <variable name="UserPathPanelVariable" value="@{jboss422.home}" />
  </variables>

  <resources>
    <res id="TargetPanel.dir" src="@{izpack.resources.dir}/target-panel-dir.txt"/>
  </resources>

  <panels>
    <panel classname="HelloPanel" />
    <panel classname="TargetPanel" />
    <panel classname="SummaryPanel" />
    <panel classname="InstallPanel" />
    <panel classname="FinishPanel" />
  </panels>

  <packs>
    <pack name="Main Application" required="yes" installGroups="New Application">
      <description>The first application deployed in a new JBoss application server.</description>
      <file src="@{deploy.artifacts.lib.dir}/jbpm-console.war" targetdir="$INSTALL_PATH/server/@{jboss.server.instance}/deploy/bpm" />
      <fileset dir="@{deploy.artifacts.lib.dir}" targetdir="$INSTALL_PATH/server/@{jboss.server.instance}/deploy/bpm" >
        <include name="jbpm-api.jar"/>
        <include name="jbpm-jpdl-integration.jar"/>
      </fileset>
      <fileset dir="@{jbpm.resources.dir}/container/jboss-4.2.2/deploy" targetdir="$INSTALL_PATH/server/@{jboss.server.instance}/deploy/bpm" >
        <include name="jbpm-ds.xml"/>
      </fileset>
      <fileset dir="@{jbpm.resources.dir}/container/jboss-4.2.2/data" targetdir="$INSTALL_PATH/server/@{jboss.server.instance}/data" >
        <include name="hypersonic/**"/>
      </fileset>
    </pack>
  </packs>

</installation>
